<main class="grid col-split-3">
  <!-- Spacer -->
  <div class="">&nbsp;</div>
  <div class="blog">
    <h1 class="txt-bold txt-primary txt-lg txt-center">BLOG</h1>
    <hr class="bg-tertiary" />
    <% blog.content.forEach(function(content, index, arr){ %>
    <div class="blog-card" style="width: 30%; float: left; margin-right: 1rem">
      <div class="blog-card-head">
        <h2 class="blog-card-title"><%= content.title %></h2>
        <span class="blog-card-date"
          ><%= content.createdAt.toLocaleDateString() %></span
        >
        <span class="blog-card-author"><%= content.author %></span>
      </div>
      <div class="blog-card-body">
        <span class="blog-card-scene">
          <img
            class="blog-card-image"
            src="/imgs/blog-image.png"
            alt="image"
            style="width: 100%; height: 200px"
          />
        </span>
        <p class="blog-card-description"><%= content.description %></p>
      </div>
      <div class="blog-card-footer" style="clear: both">
        <a class="blog-card-action" href="/blog/article/<%=content.slug%>"
          >Read-></a
        >
      </div>
    </div>
    <% }) %>
  </div>
  <!-- Spacer -->
  <div>&nbsp;</div>
</main>
