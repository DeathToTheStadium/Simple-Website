          "
        >
          Sold:<br />
          1,000k products
        </div>
        <div
          class="txt-bold txt-lg txt-primary"
          style="
            margin-bottom: 1.5rem;
            margin-right: 1rem;
            padding: 3rem;
            border: 2px solid rgba(0, 0, 0, 0.16);
            background-image: linear-gradient(#e1fcff, #e7fdff);
            border-radius: 5rem;
            box-shadow: 0px 10px 40px rgba(0, 0, 0, 0.193);
          "
        >
          Commisions Paid:<br />
          $4031.20
        </div>
      </div>
      <div></div>
    </section>
    <!-- Homepage Data Form -->
    <section
      style="
        margin-bottom: 1.5rem;
        padding: 3rem;
        border: 2px solid rgba(0, 0, 0, 0.16);
        background-image: linear-gradient(#e1fcff, #e7fdff);
        border-radius: 5rem;
        box-shadow: 0px 10px 40px rgba(0, 0, 0, 0.193);
      "
    >
      <div>
        <h2 class="txt-poppin txt-primary">HOMEPAGE</h2>
        <hr style="width: 100%; border: 1px solid rgb(43, 58, 59)" />
      </div>
      <form action="/admin/homepage-update/2" method="post">
        <section class="grid col-split-2">
          <div></div>
          <div class="">
            <label for="">Welcome Title</label>
            <br />
            <input
              class="form-item"
              type="text"
              name="welcome_title"
              id=""
              value="<%= homepage.welcome.title %>"
            />
            <br />
            <label for="">Welcome Description</label>
            <br />
            <textarea
              class="form-item"
              name="welcome_description"
              id=""
              cols="30"
              rows="10"
            >
<%= homepage.welcome.description %></textarea
            >
          </div>
          <div></div>
        </section>
        <br />
        <section class="grid col-3">
          <div class="pd-1">
            <label for="">Section 1 Title</label>
            <input
              class="form-item"
              class="form-item"
              type="text"
              name="section_title_1"
              value="<%=homepage.sections.boxOne.title %>"
              id=""
            />
            <label for="">Section 1 Description</label>
            <textarea
              class="form-item"
              name="section_description_1"
              id=""
              cols="30"
              rows="10"
            >
<%=homepage.sections.boxOne.description %></textarea
            >
          </div>
          <div class="pd-1">
            <label for="">Section 2 Title</label>
            <input
              class="form-item"
              type="text"
              name="section_title_2"
              value="<%=homepage.sections.boxTwo.title %>"
              id=""
            />
            <label for="">Section 2 Description</label>
            <textarea
              class="form-item"
              name="section_description_2"
              id=""
              cols="30"
              rows="10"
            >
<%=homepage.sections.boxTwo.description %></textarea
            >
          </div>
          <div class="pd-1">
            <label for="">Section 3 Title</label>
            <input
              class="form-item"
              type="text"
              name="section_title_3"
              value="<%=homepage.sections.boxThree.title %>"
              id=""
            />
            <label for="">Section 3 Description</label>
            <textarea
              class="form-item"
              name="section_description_3"
              id=""
              cols="30"
              rows="10"
            >
<%=homepage.sections.boxThree.description %></textarea
            >
          </div>
        </section>
        <input
          class="form-button"
          style="margin-left: 40%; margin-right: 40%"
          type="submit"
          value="Update WebPage"
        />
      </form>
    </section>
    <!-- ABOUT Page Data Form -->
    <section
      style="
        margin-bottom: 1.5rem;
        padding: 3rem;
        border: 2px solid rgba(0, 0, 0, 0.16);
        background-image: linear-gradient(#e1fcff, #e7fdff);
        border-radius: 5rem;
        box-shadow: 0px 10px 40px rgba(0, 0, 0, 0.193);
      "
    >
      <div>
        <h2 class="txt-poppin txt-primary">ABOUT</h2>
        <hr style="width: 100%; border: 1px solid rgb(43, 58, 59)" />
      </div>
      <form action="/admin/aboutpage-update/1" method="post">
        <section class="grid col-split-2">
          <div></div>
          <div>
            <label for="">Section 1 Title</label>
            <br />
            <input
              class="form-item"
              type="text"
              name="about_title"
              value="<%= aboutpage.title%>"
              id=""
            />
            <br />
            <label for="">Section 1 Title</label>
            <br />
            <input
              class="form-item"
              type="text"
              name="about_mantra"
              value="<%= aboutpage.mantra %>"
              id=""
            />
            <br />
            <label for="">Section 1 Description</label>
            <br />
            <textarea
              class="form-item"
              name="about_content"
              id=""
              cols="30"
              rows="10"
            >
<%= aboutpage.content%></textarea
            >
            <br />
          </div>
          <div></div>
        </section>
        <input
          class="form-button"
          style="margin-left: 40%; margin-right: 40%"
          type="submit"
          value="Update WebPage"
        />
      </form>
    </section>
    <!-- BLOG PAGE DATA SHEET -->
    <section
      style="
        margin-bottom: 1.5rem;
        padding: 3rem;
        border: 2px solid rgba(0, 0, 0, 0.16);
        background-image: linear-gradient(#e1fcff, #e7fdff);
        border-radius: 5rem;
        box-shadow: 0px 10px 40px rgba(0, 0, 0, 0.193);
      "
    >
      <div style="margin-bottom: 2.25rem">
        <h2 class="txt-poppin txt-primary">BLOG DATA</h2>
        <hr style="width: 100%; border: 1px solid rgb(43, 58, 59)" />
        <a class="link-btn" href="/admin/create">Make Article</a>
        <br />
      </div>
      <table>
        <tr>
          <th>Date Created</th>
          <th>Title</th>
          <th>author</th>
          <th>Description</th>
          <th>slug</th>
          <th>Content</th>
          <th>Action</th>
        </tr>
        <% blog.content.forEach(function(content, index, arr){ %>
        <tr>
          <td><%= content.createdAt.toLocaleDateString() %></td>
          <td><%= content.title %></td>
          <td><%= content.author %></td>
          <td><%= content.description %></td>
          <td><%= content.slug %></td>
          <td><%= content.body.substring(0,20) %></td>
          <td>
            <a href="/blog/article/<%= content.slug %>">Read</a>
            <a href="/admin/edit/<%= content.slug %>">Edit</a>
            <a href="/admin/delete/<%= content._id %>">Delete</a>
          </td>
        </tr>
        <% }) %>
      </table>
    </section>
  </div>
  <div></div>
</main>
