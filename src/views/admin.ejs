        <hr style="width: 100%; border: 1px solid rgb(43, 58, 59)" />
      </div>

      <div class="grid col-3" style="text-align: center">
        <div
          class="txt-bold txt-lg txt-primary"
          style="
            margin-bottom: 1.5rem;
            margin-right: 1rem;
            padding: 3rem;
