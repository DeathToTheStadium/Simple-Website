<main class="grid col-split-3">
    <div></div>
    <div>
        <h1 style="text-align: center;">Admin Panel <hr style="width: 100%; border: 3px solid black;"></h1>
        <div>
            <h2>BLOG DATA</h2>
            <a  style="display:block;margin-bottom: 1rem;" href="/admin/create">Make Article</a>
        </div>
        <table>
            <tr>
                <th>Title</th>
                <th>author</th>
                <th>Date Created</th>
                <th>Description</th>
                <th>slug</th>
                <th>Content</th>
                <th>Action</th>
            </tr>
            <% blog.content.forEach(function(content, index, arr){ %>
                <tr>
                    <td><%= content.title %></td>
                    <td><%= content.author %></td>
                    <td><%= content.createdAt.toLocaleDateString() %></td>
                    <td><%= content.description %></td>
                    <td><%= content.slug %></td>
                    <td><%= content.body.substring(0,20) %></td>
                    <td>
                        <a href="/blog/article/<%= content.slug %>">Read</a>
                        <a href="/admin/edit/<%= content.slug %>">Edit</a>
                        <a href="/admin/delete/<%= content._id %>">Delete</a>
                    </td>
                </tr>
            <% }) %>
        </table>
    </div>
    <div></div>
</main>